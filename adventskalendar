    <script>
        // --- ‚öôÔ∏è CONFIGURATION SETTINGS ---
        
        // SET THIS TO 'true' TO TEST ALL DOORS NOW. 
        // SET TO 'false' BEFORE SENDING TO CLIENTS (so they have to wait for the dates).
        const TEST_MODE = true; 

        // YOUR CONTENT GOES HERE!
        // You can put text, emojis, or even HTML like <br> for line breaks.
        const messages = {
            1: "Dec 1: The energy shifts today. Keep your eyes open for the number 11.",
            2: "Dec 2: Someone is thinking of you fondly. A soft color brings luck.",
            3: "Dec 3: Patience is your superpower today. Don't rush the process.",
            4: "Dec 4: A message comes from an unexpected source. Listen closely.",
            5: "Dec 5: Treat yourself gently. Your vibration is raising.",
            6: "Dec 6: Look for the small victories. They are adding up.",
            7: "Dec 7: A day for clarity. Write down your dreams tonight.",
            8: "Dec 8: The path clears. A blockage is removed.",
            9: "Dec 9: Trust your gut feeling about that quiet person.",
            10: "Dec 10: Double numbers appear. You are aligned.",
            11: "Dec 11: A portal day. Make a big wish.",
            12: "Dec 12: Connect with nature, even if just for a moment.",
            13: "Dec 13: Luck is on your side. Wear something shiny.",
            14: "Dec 14: You are being protected from something unseen.",
            15: "Dec 15: Halfway there. Reflect on how far you've come.",
            16: "Dec 16: Remember the Diamond Pattern? It's active today.",
            17: "Dec 17: A secret is revealed, but it benefits you.",
            18: "Dec 18: Strength is quiet today. Stand your ground.",
            19: "Dec 19: Someone admires your elegance from afar.",
            20: "Dec 20: The 20-point check. Look back 20 weeks.",
            21: "Dec 21: Solstice energy. Light a candle.",
            22: "Dec 22: Two paths diverge. Choose the one that feels lighter.",
            23: "Dec 23: Expect a sweet surprise or a 'creamy treat'.",
            24: "Dec 24: You are ready for the new year. Peace is yours."
        };

        // --- ‚öôÔ∏è END CONFIGURATION ---

        const calendar = document.getElementById('calendar');
        const modal = document.getElementById('modal');
        const modalDay = document.getElementById('modalDay');
        const modalMsg = document.getElementById('modalMsg');
        
        // Use 2025 as per your previous context, or current year
        const currentYear = 2025; 
        const currentMonth = 11; // 11 = December in JS (0-indexed)

        // Generate 24 Doors
        for (let i = 1; i <= 24; i++) {
            const door = document.createElement('div');
            door.className = 'door';
            door.innerText = i;
            door.onclick = () => openDoor(i, door);
            
            // Check if already opened in local storage
            if (localStorage.getItem('advent_door_' + i)) {
                door.classList.add('opened');
            }

            // Check if locked based on date
            if (!isDateAllowed(i)) {
                door.classList.add('locked');
            }

            calendar.appendChild(door);
        }

        function isDateAllowed(day) {
            if (TEST_MODE) return true;
            
            const now = new Date();
            // Check if we are in Dec of the correct year, and if today is >= the door day
            // Note: In testing, you might need to adjust this logic if simulating future dates.
            // Simple check: Is today's date >= the door number? (Assuming we are in Dec)
            
            // Strict check:
            // return now.getFullYear() === currentYear && now.getMonth() === currentMonth && now.getDate() >= day;
            
            // For now, let's just assume if it's Dec 2025
            if (now.getFullYear() === 2025 && now.getMonth() === 11) {
                return now.getDate() >= day;
            }
            return false; // Lock everything if not Dec 2025
        }

        function openDoor(day, element) {
            if (!isDateAllowed(day)) {
                alert("This door is locked until December " + day + "!");
                return;
            }

            // Mark visually as opened
            element.classList.add('opened');
            // Save to memory
            localStorage.setItem('advent_door_' + day, 'true');

            // Show Content
            modalDay.innerText = "December " + day;
            modalMsg.innerHTML = messages[day] || "The mists are swirling... content coming soon.";
            modal.classList.add('show');
        }

        function closeModal() {
            modal.classList.remove('show');
        }

    </script>
